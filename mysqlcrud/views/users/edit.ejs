<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Users data</title>
  </head>
  <body>
    <h1>Edit data</h1>
    <form method="POST">
      <table>
        <tr>
          <td>Name :</td>
          <td>
            <input
              type="text"
              name="name"
              value="<%= row.user_name %>"
              required
            />
          </td>
        </tr>

        <tr>
          <td>Email :</td>
          <td>
            <input
              type="email"
              name="email"
              value="<%= row.user_email %>"
              required
            />
          </td>
        </tr>

        <tr>
          <td>Mobile :</td>
          <td>
            <input
              type="number"
              name="mobile"
              value="<%= row.user_mobile %>"
              required
            />
          </td>
        </tr>

        <tr>
          <td>Password :</td>
          <td>
            <input
              type="password"
              name="password"
              value="<%= row.user_password %>"
              required
            />
          </td>
        </tr>

        <tr>
          <td>Age :</td>
          <td>
            <input
              type="number"
              name="age"
              value="<%= row.user_age %>"
              required
            />
          </td>
        </tr>

        <tr>
          <td>Address :</td>
          <td>
            <input
              type="text"
              name="address"
              value="<%= row.user_address %>"
              required
            />
          </td>
        </tr>

        <tr>
          <td><input type="submit" /></td>
        </tr>
      </table>
    </form>
  </body>
</html>
